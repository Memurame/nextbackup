<?xml version="1.0"?>
<info>
    <!-- metadata -->
    <id>ownbackup</id>
    <name>OwnBackup</name>
    <description>OwnBackup is the simple database backup solutions for your ownCloud 8.1+ or Nextcloud installation.</description>
    <licence>AGPL</licence>
    <author>Patrizio Bekerle</author>
    <version>16.11.0</version>
    <namespace>OwnBackup</namespace>
    <category>tools</category>
    <ocsid>170674</ocsid>

    <!-- admin -->
    <admin>admin</admin>

    <!-- documentation -->
    <documentation>
        <admin>https://github.com/pbek/ownbackup</admin>
    </documentation>

    <!-- resources -->
    <website>https://github.com/pbek/ownbackup</website>
    <bugs>https://github.com/pbek/ownbackup/issues</bugs>
    <repository type="git">https://github.com/pbek/ownbackup.git</repository>

    <!-- dependencies -->
    <dependencies>
        <owncloud min-version="8.1" max-version="10.2" />
        <php min-version="5.4" />
        <lib>zlib</lib>
        <database>pgsql</database>
        <database>sqlite</database>
        <database>mysql</database>
    </dependencies>

    <!-- cron jobs -->
    <cron>
        <job>OCA\OwnBackup\Jobs\BackupJob</job>
    </cron>
</info>
